@model IEnumerable<DepartmentVM>

@{
    ViewBag.Title = "All Departments";
}

<h2>All Departments</h2>
<hr />
@if (Model.Any())
{
    <div asp-validation-summary="All" class="text-danger"></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Department
                </th>
                <th>
                    Manager
                </th>
                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Manager
                    </td>
                    <td>
                        @*<a href="#" data-id="@item.Id" onclick="ajaxCall(event)">Details</a>*@
                        <i class="bi bi-ticket-detailed"></i> <a asp-action="details" asp-route-id="@item.Id">Details</a> |
                        <i class="bi bi-pencil-square"></i> <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                        <i class="bi bi-trash3"></i> <partial name="_Delete" model="@item" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        there is no data found
    </div>
}

<a asp-action="create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Add New Department
</a>

<div class="mt-4" id="partial"></div>

@section Scripts
{
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    function ajaxCall(event) {
        var id = $(event.target).data("id");

        console.log(id);

        $.ajax({
            url: "/Department/Details/" + id,
            success: function (result) {
                $("#partial").html(result);
            },
            error: function () {
                $("#partial").html("something went wrong.")
            }
        });

    }
</script>
}