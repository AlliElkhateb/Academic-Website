@model DepartmentVM

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<hr />
<h4>Course</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Name: @Model.Name</span>
        </dt>
        <dd class="col-sm-10">
            <span>Manager Name: @Model.Manager</span>
        </dd>
        <dt class="col-sm-2">

        </dt>
        <dt class="col-sm-2">
            <span>Courses: </span>
            @if (@Model.Courses.Any())
            {
                @foreach (var course in Model.Courses)
                {
                    <p>@course.Name</p>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    this course not assign to Courses yet
                </div>
            }
        </dt>
        <dt class="col-sm-2">
            <span>Instructors: </span>
            @if (Model.Instructors.Any())
            {
                @foreach (var instructor in Model.Instructors)
                {
                    <p>@instructor.Name</p>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    this course not have any instructors yet
                </div>
            }
        </dt>
        <dt class="col-sm-2">
            @if (Model.Students.Any())
            {
                <span>Number Of Students: @Model.Students.Count()</span>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    this course not have any Students yet
                </div>
            }
        </dt>
    </dl>
</div>





