@model IEnumerable<Course>

@{
    ViewBag.Title = "All Courses";
}
<h2>All Courses</h2>
<hr />
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Max Degree</th>
                <th>Min Degree</th>
                <th>Controls</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.MaxDegree</td>
                    <td>@obj.MinDegree</td>
                    <td>
                        <i class="bi bi-ticket-detailed"></i> <a asp-action="Details" asp-route-id="@obj.Id" class="text-decoration-none">Details</a> |
                        <i class="bi bi-pencil-square"></i> <a asp-action="Update" asp-route-id="@obj.Id" class="text-decoration-none">Edit</a> |
                        <i class="bi bi-trash3"></i> <partial name="_Delete" model="@obj" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        there is no data found
    </div>
}

<a asp-action="create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Add New Course
</a>



