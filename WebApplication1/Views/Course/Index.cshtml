@model IEnumerable<Course>

@{
    ViewBag.Title = "All Courses";
}

@if (Model.Any())
{
    <caption>All Courses</caption>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Course
                </th>
                <th>
                    Department Name
                </th>
                <th>
                    Max Degree
                </th>
                <th>
                    Min Degree
                </th>
                <th>
                    Course Instructors
                </th>
                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Department.Name
                    </td>
                    <td>
                        @item.MaxDegree
                    </td>
                    <td>
                        @item.MinDegree
                    </td>
                    <td>
                        @*@item.Instructors*@
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                        <i class="bi bi-trash3"></i><partial name="_Delete" model="@item" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>there is no data found</p>
}

<a asp-action="create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i>Add New Department 
</a>