@model IEnumerable<Student>

@{
    ViewBag.Title = "All Students";
}
<h2>All Students</h2>
<hr />
@if (Model.Any())
{
    <div asp-validation-summary="All" class="text-danger"></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Address
                </th>
                <th>
                    Department
                </th>
                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Age
                    </td>
                    <td>
                        @obj.Address
                    </td>
                    <td>
                        @if (@obj.Department is not null)
                        {
                            <span>@obj.Department.Name</span>
                        }
                        else
                        {
                            <span class="alert alert-warning" role="alert">
                                this instructor not assign to any Course yet
                            </span>
                        }
                    </td>
                    <td>
                        <i class="bi bi-ticket-detailed"></i> <a asp-action="Details" asp-route-id="@obj.Id" class="text-decoration-none">Details</a> |
                        <i class="bi bi-pencil-square"></i> <a asp-action="Update" asp-route-id="@obj.Id" class="text-decoration-none">Edit</a> |
                        <i class="bi bi-trash3"></i> <partial name="_Delete" model="@obj" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        there is no data found
    </div>
}

<a asp-action="create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Add New Student
</a>
