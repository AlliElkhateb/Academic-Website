@model IEnumerable<StudentVM>

@{
    ViewBag.Title = "All Students";
}
<h2>All Students</h2>
<hr />
@if (Model.Any())
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Address
                </th>
                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Age
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                        <i class="bi bi-trash3"></i><partial name="_Delete" model="@item" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>there is no data found</p>
}

<a asp-action="create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i>Add New Student
</a>
