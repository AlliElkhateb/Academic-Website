@model StudentVM

@{
    ViewData["Title"] = "Update";

    SelectList departmentsList;
    if (Model is not null)
    {
        departmentsList = new(Model.Departments, "Id", "Name", Model.DepartmentId);
    }
    else
    {
        departmentsList = new(Model.Departments, "Id", "Name");
    }
}

<h2>Update</h2>
<hr />
<h4>Student</h4>
<main class="row justify-content-between">
    <article class="col-md-4">
        <form asp-action="update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" value="@(Model.Age > 0 ? Model.Age : string.Empty)" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            @*            <div>choose courses</div>
                <div class="btn-group mt-1 mb-1" role="group" aria-label="Basic checkbox toggle button group">
                @foreach (var course in Model.Courses)
                {
                @if (Model.ListOfCoursesId.Contains(course.Id))
                {
                <input type="checkbox" class="btn-check" name="ListOfCoursesId" value="@course.Id" id="@course.Id" autocomplete="off" checked />
                <label class="btn btn-outline-primary" for="@course.Id">@course.Name</label>
                }
                else
                {
                <input type="checkbox" class="btn-check" name="ListOfCoursesId" value="@course.Id" id="@course.Id" autocomplete="off" />
                <label class="btn btn-outline-primary" for="@course.Id">@course.Name</label>
                }
                }
                </div>
                <br />
                <span asp-validation-for="ListOfCoursesId" class="text-danger"></span>*@

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" accept=".png, .jpg" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" asp-items="departmentsList" class="form-select"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-lg"></i> Save
                </button>
                <a asp-action="index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Cancel</a>
            </div>
        </form>
    </article>

    <article class="col-md-4">
        @if (Model.Image is not null)
        {
                <div id="image-container">
                    <img src="data:image//*; base64,@(Convert.ToBase64String(Model.Image))" alt="profile picture" style="height: 400px; border-radius: 30px" />
                </div>
        }
        else
        {
                <div id="image-container" class="d-none">
                    <img src="" alt="profile picture" class="img-thumbnail" style="height: 400px; border-radius: 30px" />
                </div>
        }
    </article>

</main>


@section Scripts {
<partial name="_ValidationScriptsPartial" />

<script>
    $(document).ready(function () {
        $("#Image").on("change", function (){
            console.log($(this).val().split("\\").at(-1));
            var imageSrc = window.URL.createObjectURL(this.files[0]);
            var imageContainer = $("#image-container");
            imageContainer.find("img").attr("src", imageSrc);
        })
    });
</script>
}
