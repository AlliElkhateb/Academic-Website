@model InstructorVM

@{
    ViewData["Title"] = "Update";

    SelectList departmentsList, coursesList;
    if (Model is not null)
    {
        departmentsList = new(Model.Departments, "Id", "Name", Model.Instructor.DepartmentId);
        coursesList = new(Model.Courses, "Id", "Name", Model.Instructor.CourseId);
    }
    else
    {
        departmentsList = new(Model.Departments, "Id", "Name");
        coursesList = new(Model.Courses, "Id", "Name");
    }
}

<h2>Update</h2>
<hr />
<h4>Instructor</h4>
<section class="row justify-content-between">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Instructor.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Instructor.Name" class="control-label"></label>
                <input asp-for="Instructor.Name" class="form-control" />
                <span asp-validation-for="Instructor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.Age" class="control-label"></label>
                <input asp-for="Instructor.Age" class="form-control" value="@(Model.Instructor.Age > 0 ? Model.Instructor.Age : string.Empty)" />
                <span asp-validation-for="Instructor.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.Address" class="control-label"></label>
                <input asp-for="Instructor.Address" class="form-control" />
                <span asp-validation-for="Instructor.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.Salary" class="control-label"></label>
                <input asp-for="Instructor.Salary" class="form-control" value="@(Model.Instructor.Salary > 0 ? Model.Instructor.Salary : string.Empty)" />
                <span asp-validation-for="Instructor.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.DepartmentId" class="control-label"></label>
                <select asp-for="Instructor.DepartmentId" asp-items="departmentsList" class="form-select"></select>
                <span asp-validation-for="Instructor.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.CourseId" class="control-label"></label>
                <select asp-for="Instructor.CourseId" asp-items="coursesList" class="form-select"></select>
                <span asp-validation-for="Instructor.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-lg"></i> Save
                </button>
                <a asp-action="index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Cancel</a>
            </div>
        </form>
    </div>
</section>
s

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
