@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h2>Users</h2>
    <div>
        <a asp-action="UserForm" class="btn btn-primary">Create New User</a>
    </div>
</div>

@if (Model.Any())
{
    <table class="table mt-4">
        <thead>
            <tr class="table-secondary">
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="table-light">
                    <td>@obj.FirstName </td>
                    <td>@obj.LastName </td>
                    <td>@obj.UserName </td>
                    <td>@obj.Email </td>
                    <td>@string.Join(" - ", obj.Roles)</td>
                    <td>
                        <a asp-controller="account" asp-action="ManageUserRoles" asp-route-UserId="@obj.Id" class="btn btn-outline-primary">Manage Roles</a>
                        <a asp-controller="account" asp-action="UserForm" asp-route-UserId="@obj.Id" class="btn btn-primary">Manage User</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-4">no data inserted</p>
}